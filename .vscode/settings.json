{
    // --- Language Specific ---
    "[html]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "vscode.css-language-features",
        "editor.formatOnSave": true
    },

    // --- Files ---
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },

    // --- Search ---
    "search.exclude": {
    }
}